<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.Profil.Profil"
    android:background="#11000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:background="@drawable/bg_login"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/bu_back_profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13pt"
            android:layout_marginTop="30dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingLeft="4pt"
            app:srcCompat="@drawable/icon_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20pt"
            android:gravity="center"
            android:text="Billy Gomaz"
            android:textColor="@color/black"
            android:textSize="12pt"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:gravity="center"
            android:text="New York,USA"
            android:textColor="#B0000000"
            android:textSize="9pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4pt"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5pt"
                android:layout_marginRight="15pt"
                android:layout_weight="1"
                android:gravity="right"
                android:text="1,204"
                android:textColor="#707BF8"
                android:textSize="10pt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18pt"
                android:layout_marginTop="5pt"
                android:layout_weight="1"
                android:gravity="left"
                android:text="310"
                android:textColor="#707BF8"
                android:textSize="10pt"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1pt"
                android:layout_marginRight="8pt"
                android:layout_weight="1"
                android:gravity="right"
                android:text="followers"
                android:textColor="#707BF8"
                android:textSize="8pt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8pt"
                android:layout_marginTop="1pt"
                android:layout_weight="1"
                android:gravity="left"
                android:text="followings"
                android:textColor="#707BF8"
                android:textSize="8pt"
                android:textStyle="bold" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7pt"
            android:layout_marginTop="10pt"
            android:background="#20000000">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginTop="1pt"
                android:gravity="left"
                android:text="Saved"
                android:textColor="#FA5A72"
                android:textSize="8pt"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="8pt"
                android:layout_height="8pt"
                android:layout_gravity="center"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="1pt"
                android:foregroundGravity="center"
                app:srcCompat="@drawable/saved" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:gravity="right"
                android:text="See All"
                android:textColor="#86000000"
                android:textSize="8pt"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0.5pt"
                android:layout_marginRight="5pt"
                app:srcCompat="@drawable/ic_see_all" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7pt"
            android:layout_marginTop="5pt"
            android:background="#20000000">

        </View>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_saved"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_profil"
        android:layout_width="119dp"
        android:layout_height="119dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:foregroundGravity="fill|center"


        app:layout_constraintCircleRadius="@dimen/cardview_default_radius"
         />


</androidx.constraintlayout.widget.ConstraintLayout>