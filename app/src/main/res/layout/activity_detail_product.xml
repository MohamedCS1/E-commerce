<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="ui.DetailProducts.Detail_Product"
    >

    <LinearLayout
        android:id="@+id/main_la"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:backgroundTint="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/dfg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4pt"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/bu_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10pt"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingLeft="3pt"
                android:paddingRight="0pt"
                android:src="@drawable/icon_back"
                tools:ignore="SpeakableTextPresentCheck">

            </androidx.appcompat.widget.AppCompatImageButton>

            <TextView
                android:id="@+id/tv_d_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="10pt"
                android:gravity="center"
                android:text="AR UI Trends 2002"
                android:textColor="#33357c"
                android:textSize="9pt"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1pt"
            android:layout_marginTop="3pt"

            android:background="#25444444">

        </View>


    </LinearLayout>


    <ScrollView
        android:id="@+id/scrollv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bu_call"
        android:layout_below="@+id/main_la"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView_d"
                    android:layout_width="match_parent"
                    android:layout_height="247dp"
                    android:layout_marginStart="2pt"
                    android:layout_marginTop="2pt"
                    android:layout_marginEnd="2pt"
                    android:layout_marginBottom="2pt"
                    android:background="@color/white" />
                    <TextView
                        android:id="@+id/tv_d_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="200dp"
                        android:layout_marginEnd="20dp"
                        android:text="200"
                        android:textColor="#72C834"
                        android:drawableLeft="@drawable/bg"
                        android:drawablePadding="0dp"
                        android:textSize="7pt"
                        android:textStyle="bold|italic" />


            </RelativeLayout>
            <ImageView
                android:id="@+id/bu_save"
                android:layout_width="13pt"
                android:layout_height="13pt"
                android:layout_gravity="right"
                android:layout_marginTop="5pt"
                android:layout_marginRight="9pt"
                android:src="@drawable/save">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3pt"
                android:paddingLeft="3pt"
                android:text="Description :"
                android:textColor="#364FF4"
                android:textSize="10pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_d_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="1pt"
                android:paddingLeft="3pt"
                android:text="great outerwear jackets for Spring/Autumn/Winter, suitable for many occasions, such as working, hiking, camping, mountain/rock climbing, cycling, traveling or other outdoors. Good gift choice for you or your family member. A warm hearted love to Father, husband or son in this thanksgiving or Christmas Day."
                android:textColor="#AE000000"
                android:textSize="8pt"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3pt"
                android:layout_marginBottom="3pt"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:paddingLeft="3pt"
                    android:text="Category :"
                    android:gravity="center"
                    android:textColor="#F44336"
                    android:textSize="10pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_d_category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingLeft="3pt"
                    android:gravity="center"
                    android:text="Molaya"
                    android:textColor="#AE000000"
                    android:textSize="10pt"
                    android:textStyle="bold" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2pt"
                android:layout_marginTop="7pt"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/icon_phone_number" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2pt"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="+213552938510"
                    android:textColor="@color/black"
                    android:textSize="9pt"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2pt"
                android:layout_marginTop="7pt"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/icon_location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2pt"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="Alger/El harrach"
                    android:textColor="@color/black"
                    android:textSize="9pt"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2pt"
                android:layout_marginTop="7pt"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/icon_email" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2pt"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="mezmoh530@gmail.com"
                    android:textColor="@color/black"
                    android:textSize="9pt"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_alignTop="@+id/bu_call"
        android:background="#25444444">
    </View>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bu_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:backgroundTint="#2BE316"
        android:drawableLeft="@drawable/icon_call24"
        android:text="Call"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="9pt">

    </androidx.appcompat.widget.AppCompatButton>

</RelativeLayout>